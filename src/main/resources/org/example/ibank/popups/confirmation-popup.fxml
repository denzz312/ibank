<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ibank.controller.ConfirmationPopUpController"
      alignment="CENTER" spacing="15" minWidth="250">
    <Label fx:id="messageLabel" text="Are you sure?" style="-fx-font-size: 16px;" />
    <HBox alignment="CENTER" spacing="10">
        <Button text="Yes" onAction="#onYesClicked" />
        <Button text="No" onAction="#onNoClicked" />
    </HBox>
</VBox>
