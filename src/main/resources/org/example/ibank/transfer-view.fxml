<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ibank.controller.TransferController">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="%transfer.title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <HBox spacing="10" alignment="CENTER">
                <Label text="%transfer.account" minWidth="100"/>
                <TextField fx:id="targetAccountField" promptText="%transfer.accountID" prefWidth="200"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="%transfer.amount" minWidth="100"/>
                <TextField fx:id="amountField" promptText="%transfer.amountPrompt" prefWidth="200"/>
            </HBox>

            <Button text="%transfer.button"
                    onAction="#onTransferClicked"
                    prefWidth="150"/>

            <Label fx:id="statusLabel" textFill="darkred"/>
        </VBox>
    </center>

    <bottom>
        <fx:include source="navigation-bar.fxml"/>
    </bottom>
</BorderPane>
