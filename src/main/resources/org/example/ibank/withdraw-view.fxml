<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ibank.controller.WithdrawController"
      alignment="TOP_CENTER"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Withdraw Funds"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
        </rowConstraints>

        <Button text="\$100"
                onAction="#withdraw100"
                GridPane.rowIndex="0" GridPane.columnIndex="0"
                prefHeight="50" maxWidth="500" maxHeight="500">
            <GridPane.margin>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </GridPane.margin>
        </Button>

        <Button text="\$200"
                onAction="#withdraw200"
                GridPane.rowIndex="0" GridPane.columnIndex="1"
                prefHeight="50" maxWidth="500" maxHeight="500">
            <GridPane.margin>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </GridPane.margin>
        </Button>

        <Button text="\$500"
                onAction="#withdraw500"
                GridPane.rowIndex="1" GridPane.columnIndex="0"
                prefHeight="50" maxWidth="500" maxHeight="500">
            <GridPane.margin>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </GridPane.margin>
        </Button>

        <Button text="\$1000"
                onAction="#withdraw1000"
                GridPane.rowIndex="1" GridPane.columnIndex="1"
                prefHeight="50" maxWidth="500" maxHeight="500">
            <GridPane.margin>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </GridPane.margin>
        </Button>

		        <Button text="\$2000"
                onAction="#withdraw2000"
                GridPane.rowIndex="2" GridPane.columnIndex="0"
                prefHeight="50" maxWidth="500" maxHeight="500">
            <GridPane.margin>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </GridPane.margin>
        </Button>

        <Button text="Custom"
                onAction="#showCustom"
                GridPane.rowIndex="2" GridPane.columnIndex="1"
                GridPane.columnSpan="2"
                prefHeight="50" maxWidth="500" maxHeight="500">
            <GridPane.margin>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </GridPane.margin>
        </Button>
    </GridPane>

    <HBox fx:id="customPane"
          alignment="CENTER"
          spacing="10"
          visible="false"
          managed="false">
        <TextField fx:id="customAmountField" promptText="Amount" prefWidth="120"/>
        <Button text="Confirm" onAction="#withdrawCustom"/>
    </HBox>

    <Label fx:id="statusLabel" textFill="darkred"/>
</VBox>
